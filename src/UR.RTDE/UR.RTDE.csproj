<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net48;net8.0</TargetFrameworks>
    <RootNamespace>UR.RTDE</RootNamespace>
    <AssemblyName>UR.RTDE</AssemblyName>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    
    <!-- Package metadata -->
    <PackageId>UR.RTDE</PackageId>
    <Version>1.0.0</Version>
    <Authors>Your Name</Authors>
    <Company>Your Company</Company>
    <Description>C# wrapper for Universal Robots RTDE interface. Works with Rhino 7 (.NET 4.8) and Rhino 8 (.NET 8) on Windows x64 and macOS arm64.</Description>
    <PackageTags>ur;universal-robots;rtde;robotics;rhino;grasshopper</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/yourusername/UR.RTDE</PackageProjectUrl>
    <RepositoryUrl>https://github.com/yourusername/UR.RTDE</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    
    <!-- Enable native library packaging -->
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
  </PropertyGroup>

  <!-- Include native libraries in NuGet package -->
  <ItemGroup>
    <!-- Windows x64 -->
    <Content Include="runtimes\win-x64\native\**\*.*" PackagePath="runtimes\win-x64\native\" Pack="true" />
    
    <!-- macOS arm64 -->
    <Content Include="runtimes\osx-arm64\native\**\*.*" PackagePath="runtimes\osx-arm64\native\" Pack="true" />
  </ItemGroup>

  <!-- Framework-specific dependencies -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net48'">
    <!-- .NET Framework 4.8 doesn't need extra dependencies for P/Invoke -->
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <!-- .NET 8 doesn't need extra dependencies for P/Invoke -->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="pythonnet" Version="3.0.3" />
  </ItemGroup>

</Project>
